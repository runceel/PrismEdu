<UserControl
    x:Class="MvvmBasicApp.HelloWorld.Views.DelegateCommandSampleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MvvmBasicApp.HelloWorld.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:MvvmBasicApp.HelloWorld.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:DelegateCommandSampleViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock FontSize="24" Text="{Binding HeaderText}" />
        <TextBox Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}" />
        <Button Command="{Binding ToUpperCommand}" Content="ToUpper" />
        <TextBlock Text="{Binding Output}" />
    </StackPanel>
</UserControl>
